<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="98dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="302dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_title"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="344dp"
        android:text="title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="22dp"
        android:text="year"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/movie_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="13dp"
        android:text="director"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toBottomOf="@+id/movie_year" />

    <TextView
        android:id="@+id/movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="14dp"
        android:text="rating"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toBottomOf="@+id/movie_director" />

    <TextView
        android:id="@+id/movie_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="18dp"
        android:text="number of votes"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toBottomOf="@+id/movie_rating" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="183dp"
        android:text="overview"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="11dp"
        android:text="genres"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toBottomOf="@+id/movie_votes" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="17dp"
        android:text="people"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/theOverview"
        android:layout_width="182dp"
        android:layout_height="112dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="106dp"
        android:scrollbars = "vertical"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/thYear"
        android:layout_width="187dp"
        android:layout_height="20dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/movie_year"
        app:layout_constraintTop_toBottomOf="@+id/theOverview" />

    <TextView
        android:id="@+id/theDirector"
        android:layout_width="101dp"
        android:layout_height="23dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toEndOf="@+id/movie_director"
        app:layout_constraintTop_toBottomOf="@+id/thYear" />

    <TextView
        android:id="@+id/theRating"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toEndOf="@+id/movie_rating"
        app:layout_constraintTop_toBottomOf="@+id/theDirector" />

    <TextView
        android:id="@+id/theVotes"
        android:layout_width="113dp"
        android:layout_height="24dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@+id/movie_votes"
        app:layout_constraintTop_toBottomOf="@+id/theRating" />

    <TextView
        android:id="@+id/theGenres"
        android:layout_width="188dp"
        android:layout_height="25dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:scrollbars = "vertical"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/theVotes" />

    <TextView
        android:id="@+id/thePeople"
        android:layout_width="198dp"
        android:layout_height="107dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:scrollbars = "vertical"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/theGenres" />
</androidx.constraintlayout.widget.ConstraintLayout>